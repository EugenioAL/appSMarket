<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdutosVendidosActivicty">

    <Button
        android:id="@+id/btn_getpv"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_marginStart="4dp"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:iconSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/btn_delpv"
        app:layout_constraintTop_toTopOf="@+id/btn_delpv" />

    <EditText
        android:id="@+id/et_pvval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_pvqt"
        app:layout_constraintStart_toStartOf="@+id/et_pvqt"
        app:layout_constraintTop_toBottomOf="@+id/et_pvqt" />

    <ListView
        android:id="@+id/list_pv"
        android:layout_width="408dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView49"
        app:layout_constraintVertical_bias="0.504" />

    <Button
        android:id="@+id/btn_addpv"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:icon="@android:drawable/ic_input_add"
        app:iconSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pvval" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Produto ID:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="Valor:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="44dp"
        android:text="Resultado:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_attpv" />

    <Button
        android:id="@+id/btn_delpv"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_marginStart="4dp"
        app:icon="@android:drawable/ic_delete"
        app:iconSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/btn_attpv"
        app:layout_constraintTop_toTopOf="@+id/btn_attpv" />

    <EditText
        android:id="@+id/et_pvqt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_pvprodid"
        app:layout_constraintStart_toStartOf="@+id/et_pvprodid"
        app:layout_constraintTop_toBottomOf="@+id/et_pvprodid" />

    <EditText
        android:id="@+id/et_pvprodid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_pvcupomid"
        app:layout_constraintStart_toStartOf="@+id/et_pvcupomid"
        app:layout_constraintTop_toBottomOf="@+id/et_pvcupomid" />

    <EditText
        android:id="@+id/et_pvcupomid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView30"
        app:layout_constraintStart_toStartOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Cupom ID:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_pvcupomid" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:text="Qt:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button
        android:id="@+id/btn_attpv"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_marginStart="4dp"
        app:icon="@android:drawable/ic_popup_sync"
        app:iconPadding="8dp"
        app:iconSize="60dp"
        app:layout_constraintStart_toEndOf="@+id/btn_addpv"
        app:layout_constraintTop_toTopOf="@+id/btn_addpv" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Produtos Vendidos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>